node("x86_runner2"){
    stage ('Checkout SCM'){
        checkout scm
    }
    stage('Creating directory for installation'){
        sh'''#!/bin/bash
            mkdir -p /softwares/rust/cargo /softwares/rust/rustup
        '''
    }
    stage ('Installation'){
        sh'''#!/bin/bash
            export CARGO_HOME=/softwares/rust/cargo
            export RUSTUP_HOME=/softwares/rust/rustup
            sh rustup-init.sh
        '''
    }
}
node ("riscv64_runner1"){
    stage ('Checkout SCM'){
        checkout scm
    }
    stage('Creating directory for installation'){
        sh'''#!/bin/bash
            mkdir -p ~/softwares/rust/cargo ~/softwares/rust/rustup
        '''
    }
    stage ('Installation'){
        sh'''#!/bin/bash
            export CARGO_HOME=~/softwares/rust/cargo
            export RUSTUP_HOME=~/softwares/rust/rustup
            sh rustup-init.sh -y
        '''
    }
}